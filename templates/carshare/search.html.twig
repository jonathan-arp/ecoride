{% extends 'base.html.twig' %}

{% block title %}Rechercher un covoiturage{% endblock %}

{% block body %}
{% for label, messages in app.flashes %}
    <div class="container mt-3">
        <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : 'info') }} alert-dismissible fade show" role="alert">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
{% endfor %}

<div class="hero-section bg-success text-white py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="text-center mb-4">
                    <i class="fas fa-search me-3"></i>Trouvez votre covoiturage idéal
                </h1>
                <p class="text-center lead mb-5">
                    Recherchez parmi nos covoiturages disponibles selon vos critères
                </p>
                
                <div class="card shadow-lg">
                    <div class="card-body p-4">
                        {{ form_start(searchForm) }}
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(searchForm.departureLocation, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-map-marker-alt text-success"></i>
                                        </span>
                                        {{ form_widget(searchForm.departureLocation) }}
                                    </div>
                                    {{ form_errors(searchForm.departureLocation) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(searchForm.arrivalLocation, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-flag-checkered text-danger"></i>
                                        </span>
                                        {{ form_widget(searchForm.arrivalLocation) }}
                                    </div>
                                    {{ form_errors(searchForm.arrivalLocation) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(searchForm.passengers, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-users text-primary"></i>
                                        </span>
                                        {{ form_widget(searchForm.passengers) }}
                                    </div>
                                    {{ form_errors(searchForm.passengers) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(searchForm.date, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-calendar text-warning"></i>
                                        </span>
                                        {{ form_widget(searchForm.date) }}
                                    </div>
                                    {{ form_errors(searchForm.date) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center mt-4">
                            {{ form_widget(searchForm.search) }}
                        </div>
                        
                        {{ form_end(searchForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    {% if searchPerformed %}
        {% if searchResults|length > 0 %}
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="text-success">
                            <i class="fas fa-car me-2"></i>
                            {{ searchResults|length }} covoiturage(s) trouvé(s)
                        </h2>
                        <a href="{{ path('app_carshare') }}" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>Voir tous les covoiturages
                        </a>
                    </div>
                    
                    <div class="row">
                        {% for carshare in searchResults %}
                            <div class="col-lg-6 mb-4">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="card-header bg-light border-0">
                                        <h5 class="card-title mb-0 text-success">
                                            <i class="fas fa-route me-2"></i>
                                            {{ carshare.startLocation }} → {{ carshare.endLocation }}
                                        </h5>
                                    </div>
                                    
                                    <div class="card-body">
                                        <div class="row g-3">
                                            <div class="col-6">
                                                <small class="text-muted">Départ</small>
                                                <div class="fw-bold">
                                                    <i class="fas fa-clock me-1 text-primary"></i>
                                                    {{ carshare.start|date('d/m/Y H:i') }}
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Arrivée</small>
                                                <div class="fw-bold">
                                                    <i class="fas fa-clock me-1 text-danger"></i>
                                                    {{ carshare.end|date('d/m/Y H:i') }}
                                                </div>
                                            </div>
                                            
                                            <div class="col-6">
                                                <small class="text-muted">Conducteur</small>
                                                <div class="fw-bold">
                                                    <i class="fas fa-user me-1 text-info"></i>
                                                    {{ carshare.driver.firstname }} {{ carshare.driver.lastname }}
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Places disponibles</small>
                                                <div class="fw-bold">
                                                    <i class="fas fa-users me-1 text-warning"></i>
                                                    {{ carshare.place }}
                                                </div>
                                            </div>
                                            
                                            <div class="col-6">
                                                <small class="text-muted">Véhicule</small>
                                                <div class="fw-bold">
                                                    <i class="fas fa-car me-1 text-secondary"></i>
                                                    {{ carshare.car.model }}
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Prix</small>
                                                <div class="fw-bold text-success fs-5">
                                                    {{ carshare.price }} €
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="card-footer bg-white border-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-{{ carshare.status == 'active' ? 'success' : 'secondary' }}">
                                                {{ carshare.status|title }}
                                            </span>
                                            <a href="{{ path('app_carshare_by_id', {id: carshare.id}) }}" 
                                               class="btn btn-outline-success btn-sm">
                                                <i class="fas fa-eye me-1"></i>Voir détails
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <div class="card border-0 shadow-sm">
                    <div class="card-body py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h3 class="text-muted">Aucun covoiturage trouvé</h3>
                        <p class="text-muted mb-4">
                            Nous n'avons pas trouvé de covoiturages correspondant à vos critères de recherche.
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="{{ path('app_carshare_search') }}" class="btn btn-outline-primary">
                                <i class="fas fa-redo me-2"></i>Nouvelle recherche
                            </a>
                            <a href="{{ path('app_carshare') }}" class="btn btn-success">
                                <i class="fas fa-list me-2"></i>Voir tous les covoiturages
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
