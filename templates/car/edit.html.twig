{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center mt-5">Modifier un v√©hicule</h1>
<div class="container my-5 d-flex flex-wrap justify-content-between">
    
    <div class="col-md-3 col-sm-12 mt-4">
        {% include 'account/_menu.html.twig' %} 
    </div>
    
    <div class="col-md-9 col-sm-12 mb-4">
        <div class="card" id="card-account">
            <div class="card-header bg-gold">
                <h4>
                    <i class="fas fa-edit me-2"></i>Modifier {{ car.brand.content }} {{ car.model }}
                </h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.brand) }}
                            {{ form_widget(form.brand) }}
                            {{ form_errors(form.brand) }}
                        </div>
                        
                        <div class="form-group mb-3">
                            {{ form_label(form.model) }}
                            {{ form_widget(form.model) }}
                            {{ form_errors(form.model) }}
                        </div>
                        
                        <div class="form-group mb-3">
                            {{ form_label(form.matriculation) }}
                            {{ form_widget(form.matriculation) }}
                            {{ form_errors(form.matriculation) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.color) }}
                            {{ form_widget(form.color) }}
                            {{ form_errors(form.color) }}
                        </div>
                        
                        <div class="form-group mb-3">
                            {{ form_label(form.energyType) }}
                            {{ form_widget(form.energyType) }}
                            {{ form_errors(form.energyType) }}
                        </div>
                        
                        <div class="form-group mb-3">
                            {{ form_label(form.date_first_matricule) }}
                            {{ form_widget(form.date_first_matricule) }}
                            {{ form_errors(form.date_first_matricule) }}
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_car_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <div>
                        <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-outline-info me-2">
                            <i class="fas fa-eye me-2"></i>Voir
                        </a>
                        <button type="submit" form="{{ form.vars.id }}" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Modifier
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
