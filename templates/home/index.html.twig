{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<!-- Search Section -->
<section class="bg-success text-white py-4 shadow-sm">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <h2 class="text-center mb-4">
          Recherchez votre covoiturage
        </h2>
        
        <div class="card border-0 shadow">
          <div class="card-body p-4">
            {{ form_start(searchForm) }}
            
            <div class="row g-3">
              <div class="col-md-3">
                <div class="form-group">
                  {{ form_label(searchForm.departureLocation, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                  {{ form_widget(searchForm.departureLocation, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>
              
              <div class="col-md-3">
                <div class="form-group">
                  {{ form_label(searchForm.arrivalLocation, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                  {{ form_widget(searchForm.arrivalLocation, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>
              
              <div class="col-md-2">
                <div class="form-group">
                  {{ form_label(searchForm.passengers, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                  {{ form_widget(searchForm.passengers, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>
              
              <div class="col-md-2">
                <div class="form-group">
                  {{ form_label(searchForm.date, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                  {{ form_widget(searchForm.date, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>
              
              <div class="col-md-2 d-flex align-items-end">
                <div class="form-group w-100">
                  <button type="submit" class="btn btn-success w-100">Rechercher</button>
                </div>
              </div>
            </div>
            
            {{ form_end(searchForm) }}
          </div>
        </div>
        
        <div class="text-center mt-3">
          <small class="text-light">
            Recherche précise selon vos critères exacts
          </small>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="container my-5">
  <div class="row align-items-center mt-3">
    <!-- IMG2 -->
    <div class="col-md-5 order-1 order-md-2 offset-md-1 mb-4 mb-md-0" style="z-index: 2;">
      <img 
        src="{{ asset('build/images/country.jpg') }}" 
        class="img-fluid rounded shadow" 
        alt="groupe">
    </div>

    <!-- Bloc texte + IMG1 -->
    <div class="col-md-6 order-2 order-md-1 position-relative mb-5">
      <div class="position-relative text-container"> <!-- Explicit height for the container -->
        <div class="p-4 bg-green white" style="border-radius: 12px; position: relative; ">
          <h6 class="text-uppercase" style="margin-bottom: 10px;">Covoiturage</h6>
          <h1 style="font-size: 28px; font-weight: 300; line-height: 1.3;">Mobilité &amp; Ecologie<br>France</h1>
          <a href="{{ path('app_carshare_search') }}" class="btn btn-outline-white" style="display: inline-block; margin-top: 20px;">Rechercher covoiturages</a>
        </div>

        <!-- IMG1 superposée dans the same container -->
        <img 
          src="{{ asset('build/images/road.jpg') }}" 
          alt="route montagne"
          class="img-fluid img1-responsive"
          >
      </div>
    </div>

  </div>
</section>
<section class="container my-5" >
        <div class="col-md-12">
            <h2 class="text-center green mb-4">Bienvenue sur EcoRide</h2>
            <h5 class="text-center text-muted">
                Rejoignez notre communauté de conducteurs et passagers pour partager vos trajets et réduire votre empreinte carbone.
            </h5>
        </div>
    </div>
</section>

<div class=" text-center my-5 col-md-8 mx-auto col-sm-12 rounded shadow p-4" style="background-color: #f8f9fa;">
  {% include 'components/section-services.html.twig' %}
</div>




{% endblock %}

