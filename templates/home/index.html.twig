{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<!-- Search Section -->
<section class="bg-success text-white py-4 shadow-sm">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <h2 class="text-center mb-4">
          <i class="fas fa-search me-2"></i>Recherchez votre covoiturage
        </h2>
        
        <div class="card border-0 shadow">
          <div class="card-body p-4">
            {{ form_start(searchForm) }}
            
            <div class="row g-3">
              <div class="col-md-3">
                <div class="form-group">
                  {{ form_label(searchForm.departureLocation, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                  <div class="input-group">
                    <span class="input-group-text bg-light">
                      <i class="fas fa-map-marker-alt text-success"></i>
                    </span>
                    {{ form_widget(searchForm.departureLocation) }}
                  </div>
                </div>
              </div>
              
              <div class="col-md-3">
                <div class="form-group">
                  {{ form_label(searchForm.arrivalLocation, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                  <div class="input-group">
                    <span class="input-group-text bg-light">
                      <i class="fas fa-flag-checkered text-danger"></i>
                    </span>
                    {{ form_widget(searchForm.arrivalLocation) }}
                  </div>
                </div>
              </div>
              
              <div class="col-md-2">
                <div class="form-group">
                  {{ form_label(searchForm.passengers, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                  <div class="input-group">
                    <span class="input-group-text bg-light">
                      <i class="fas fa-users text-primary"></i>
                    </span>
                    {{ form_widget(searchForm.passengers) }}
                  </div>
                </div>
              </div>
              
              <div class="col-md-2">
                <div class="form-group">
                  {{ form_label(searchForm.date, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                  <div class="input-group">
                    <span class="input-group-text bg-light">
                      <i class="fas fa-calendar text-warning"></i>
                    </span>
                    {{ form_widget(searchForm.date) }}
                  </div>
                </div>
              </div>
              
              <div class="col-md-2 d-flex align-items-end">
                <div class="form-group w-100">
                  {{ form_widget(searchForm.submit, {'attr': {'class': 'btn btn-success w-100'}}) }}
                </div>
              </div>
            </div>
            
            {{ form_end(searchForm) }}
          </div>
        </div>
        
        <div class="text-center mt-3">
          <small class="text-light">
            <i class="fas fa-info-circle me-1"></i>
            Recherche élargie : ±3 jours autour de votre date
          </small>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="container my-5">
  <div class="row align-items-center mt-3">
    <!-- IMG2 -->
    <div class="col-md-5 order-1 order-md-2 offset-md-1 mb-4 mb-md-0" style="z-index: 2;">
      <img 
        src="{{ asset('build/images/country.jpg') }}" 
        class="img-fluid rounded shadow" 
        alt="groupe">
    </div>

    <!-- Bloc texte + IMG1 -->
    <div class="col-md-6 order-2 order-md-1 position-relative mb-5">
      <div class="position-relative text-container"> <!-- Explicit height for the container -->
        <div class="p-4 bg-green white" style="border-radius: 12px; position: relative; ">
          <h6 class="text-uppercase" style="margin-bottom: 10px;">Covoiturage</h6>
          <h1 style="font-size: 28px; font-weight: 300; line-height: 1.3;">Mobilité &amp; Ecologie<br>France</h1>
          <a href="#" class="btn btn-outline-white" style="display: inline-block; margin-top: 20px;">Voir les annonces</a>
        </div>

        <!-- IMG1 superposée dans the same container -->
        <img 
          src="{{ asset('build/images/road.jpg') }}" 
          alt="route montagne"
          class="img-fluid img1-responsive"
          >
      </div>
    </div>

  </div>
</section>


<div class=" text-center my-5 col-md-8 mx-auto col-sm-12 rounded shadow p-4" style="background-color: #f8f9fa;">
  {% include 'components/section-services.html.twig' %}
</div>


<section class="py-5 text-center">
  <div class="container">
    <h2 class="mb-4" style="color: #b98d75;">Nos partenaires sponsors</h2>
    <p class="mb-5 text-muted">Un grand merci à nos précieux soutiens pour leur engagement auprès de l’école de danse.</p>

    <div class="row justify-content-center align-items-center g-4">
      
        <div class="col-6 col-sm-4 col-md-3">
          <img src="" class="img-fluid" alt="" style="max-height: 80px;">
        </div>
      
    </div>
  </div>
</section>





{% endblock %}

