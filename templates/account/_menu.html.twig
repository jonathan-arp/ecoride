    {% else %}
    <li class="nav-item">
        <small class="nav-link text-muted">
            <i class="fas fa-info-circle me-2"></i>
            Vous êtes passager uniquement
        </small>
    </li>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPLOYEE') %}

        <li class="nav-item">

            <a class="nav-link" href="{{ path('admin') }}">Administration</a>

        </li>
        

    {% endif %}

    <li class="nav-item">

        <a class="nav-link" href="{{ path('app_logout') }}">Me déconnecter</a>

    </li>

